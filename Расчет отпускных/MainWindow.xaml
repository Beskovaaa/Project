<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Расчет_отпускных"
        xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012" x:Class="Расчет_отпускных.MainWindow"
        mc:Ignorable="d"
        Title="Расчет отпускных DQS" Height="600" Width="1000" Background="#FFDEDEFF" FontWeight="Bold" Cursor="Pen" >
    <Grid x:Name="WindowGrid" Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="125" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <Image Source="Image\DQS-Logo.jpg" Grid.Row="1" Grid.Column="0"/>
        <DataGrid Grid.Column="1" HorizontalAlignment="Left" Height="424" Margin="10,10,0,0" VerticalAlignment="Top" Width="772" x:Name="MainGrid" CellEditEnding="MainGrid_CellEditEnding"/>
        <ListBox x:Name="ListEmployees" HorizontalAlignment="Left" Height="365" Margin="10,10,0,0" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="ButtonPrint" Content="Печать" Grid.Column="1" HorizontalAlignment="Left" Margin="634,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="148" Click="ButtonPrint_Click"/>
        <Button x:Name="ButtonAddEmployee" Content="Добавить сотрудника" HorizontalAlignment="Left" Margin="10,389,0,0" VerticalAlignment="Top" Width="180" Click="ButtonAddEmployee_Click"/>
        <Button x:Name="ButtonDeleteEmployee" Content="Удалить сотрудника" HorizontalAlignment="Left" Margin="10,414,0,0" VerticalAlignment="Top" Width="180"/>

    </Grid>
</Window>
