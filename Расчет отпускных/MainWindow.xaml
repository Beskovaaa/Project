        </Grid.ColumnDefinitions>


        <Image Source="Image\DQS-Logo.jpg" Grid.Row="1" Grid.Column="0"/>
        <Button Content="загрузка таблицы" Grid.Column="1" HorizontalAlignment="Left" Margin="47,33,0,0" Grid.Row="1" VerticalAlignment="Top" Width="119" Click="Button_Click"/>
